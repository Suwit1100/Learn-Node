<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>manage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <%- include('nav') %>
            <div class="row">
                <div class="col-12 d-flex justify-content-end">
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">เพิ่มข้อมูล</a>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">ชื่อสินค้า</th>
                        <th scope="col">ราคา</th>
                        <th scope="col">รายละเอียด</th>
                        <th scope="col">แก้ไข</th>
                        <th scope="col">ลบ</th>
                    </tr>
                </thead>
                <tbody>
                    <% product.forEach(item=> { %>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>@mdo</td>
                            <td scope="col"><a href="/edit_product" class="btn btn-warning">แก้ไข</a></td>
                            <td scope="col"><a href="/" class="btn btn-danger">ลบ</a></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">เพิ่มข้อมูลสินค้า</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" action="/add_product">
                                <div class="row">
                                    <div class="col-12 my-2">
                                        <input type="text" name="name" placeholder="ชื่อสินค้า" class="form-control"
                                            value="">
                                    </div>
                                    <div class="col-12 my-2">
                                        <input type="number" name="price" placeholder="ราคา" class="form-control"
                                            value="">
                                    </div>
                                    <div class="col-12 my-2">
                                        <input type="text" name="description" placeholder="รายละเอียด"
                                            class="form-control" value="">
                                    </div>
                                    <div class="col-12 my-2">
                                        <input type="file" name="image" class="form-control">
                                    </div>
                                    <div class="col-12 my-2">
                                        <input type="submit" class="form-control btn btn-success">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>

</body>

</html>